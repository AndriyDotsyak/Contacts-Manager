<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_photo_IC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_contact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_full_name_IC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Full name"
        android:textSize="16sp"
        android:textColor="@color/black_alpha_90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_photo_IC"
        app:layout_constraintEnd_toStartOf="@+id/image_button_remove_IC"/>

    <TextView
        android:id="@+id/text_email_IC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="14sp"
        android:textColor="@color/arsenic"
        app:layout_constraintStart_toStartOf="@+id/text_full_name_IC"
        app:layout_constraintTop_toBottomOf="@+id/text_full_name_IC"
        app:layout_constraintEnd_toEndOf="@id/text_full_name_IC"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/image_button_remove_IC"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_remove"
        android:scaleType="fitXY"
        android:tint="@color/cardinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>